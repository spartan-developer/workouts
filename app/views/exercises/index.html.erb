<h1>Listing exercises</h1>

<table>
<% @exercises.each do |exercise| %>
  <tr class="<% cycle('list_line_odd', 'list_line_even') %>">

    <td>
      <%= image_tag(exercise.image_url, class: 'list_image') %>
    </td>

    <td class="list_description">
      <dl>
        <dt><%= exercise.title %></dt>
        <dd><%= truncate(strip_tags(exercise.description), length:80) %></dd>
      </dl>
    </td>

    <td class="list_actions">
      <%= link_to 'Show', exercise %><br/>
      <%= link_to 'Edit', edit_exercise_path(exercise) %><br/>
      <%= link_to 'Destroy', exercise, method: :delete, 
                   data: { confirm: 'Are you sure?' } %>
    </td>
  </tr>
<% end %>
</table>
<br />

<%= link_to 'New Exercise', new_exercise_path %>
